{
    "name": "aist/aist-alice-fixtures",
    "description": "Alice Fixtures for Zend Framework.",
    "license": "BSD-3-Clause",
    "keywords": [
        "alice",
        "fixtures",
        "faker",
        "zend framework",
        "developer tools"
    ],
    "authors": [
        {
            "name": "MaSi",
            "email": "webdeveloper@mateuszsitek.com",
            "homepage": "http://mateuszsitek.com",
            "role": "Author"
        }
    ],
    "require": {
        "php": "^7.2",
        "bacon/bacon-string-utils": "^1.1",
        "doctrine/doctrine-orm-module": "^2.1",
        "nelmio/alice": "^2.0",
        "zendframework/zend-modulemanager": "^2.8"
    },
    "require-dev": {
        "malukenho/docheader": "^0.1.7",
        "mmoreram/php-formatter": "^1.3",
        "phpunit/phpunit": "^7.3",
        "squizlabs/php_codesniffer": "^3.2"
    },
    "autoload": {
        "psr-4": {
            "Aist\\AliceFixtures\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Test\\Aist\\AliceFixtures\\": "test/"
        }
    },
    "extra": {
        "zf": {
            "component": "Aist\\AliceFixtures",
            "module": "Aist\\AliceFixtures",
            "config-provider": "Aist\\AliceFixtures\\ConfigProvider"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "header-check": [
            "docheader check src",
            "docheader check config",
            "docheader check test"
        ],
        "header-fix": [
            "php-formatter formatter:header:fix src",
            "php-formatter formatter:header:fix config",
            "php-formatter formatter:header:fix test"
        ],
        "use-sort": [
            "php-formatter formatter:use:sort src",
            "php-formatter formatter:use:sort config",
            "php-formatter formatter:use:sort test"
        ],
        "all-check": [
            "@header-check",
            "@cs-check"
        ],
        "all-fix": [
            "@header-fix",
            "@use-sort",
            "@cs-fix"
        ],
        "test": "phpunit --colors=always",
        "cs-check": "phpcs --colors",
        "cs-fix": "phpcbf --colors",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
